<Window x:Class="Wpf_Zaharov_PR2.Window10"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Zaharov_PR2"
        mc:Ignorable="d"
        Title="Window10" Height="450" Width="800">
    <Grid>
        <Menu x:Name="Menu">
            <MenuItem Header="Меню">
                <MenuItem Header="Изменить цвет фона" Click="MenuItem_Click"/>
                <MenuItem Header="О разработчике" Click="MenuItem_Click_1"/>
                <MenuItem Header="Закрыть окно" Click="MenuItem_Click_2"/>
            </MenuItem>
        </Menu>
        <ToolBar Height="30" VerticalAlignment="Top" Width="600">
            <MenuItem Header="Изменить цвет фона" Click="MenuItem_Click"/>
            <Separator/>
            <MenuItem Header="О разработчике" Click="MenuItem_Click_1"/>
            <Separator/>
            <MenuItem Header="Закрыть окно" Click="MenuItem_Click_2"/>
        </ToolBar>
    </Grid>
</Window>
